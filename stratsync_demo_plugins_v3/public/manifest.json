{
  "manifest_version": 3,
  "name": "Rohit Choukiker",
  "version": "2.0.0",
  "description": "StratSync Demo Plugin V3",

  "permissions": ["windows", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "index.html",
    "default_title": "Open Demo StratSync V3"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "48": "logo.jpeg"
  }
}
